<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <StackPanel>
      <Button ToolTip.Tip="System Information"  Width="32" Height="28" Classes="WindowActionButton">
        <Image Source="avares://AisOS/Assets/gears.png" Height="20" Width="20" />
      </Button>
      <Button Classes="AisOsOkButton" Height="30" Width="180" Content="Hello World Button" Margin="5,5,5,5" />
    </StackPanel>
  </Design.PreviewWith>

  <Style Selector="Button.WindowActionButton">
    <Setter Property="Foreground" Value="{DynamicResource MainBlackFontColor}" />
    <Setter Property="FontFamily" Value="Metronic Semi Bold" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Margin" Value="0" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="Background" Value="Transparent" />
  </Style>
  <Style Selector="Button.AisOsOkButton">
    <Setter Property="FontSize" Value="15" />
    <Setter Property="FontFamily" Value="Segoe UI" />
    <Setter Property="Height" Value="36" />
    <Setter Property="Width" Value="220" />
  </Style>
</Styles>