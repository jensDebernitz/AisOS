<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
          <TextBox Classes="LoginTextBoxStyle" Height="30" Width="180" Text="Hello World Button" />
    </Design.PreviewWith>

  <Style  Selector="TextBox.LoginTextBoxStyle">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="{StaticResource MainBlackFontColor}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Width" Value="220" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
        <Setter Property="MinHeight" Value="24"></Setter>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="SelectionBrush" Value="{StaticResource NavigationBackgroundColorPressed}" />
    </Style>
</Styles>